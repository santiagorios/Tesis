<%- model_class = @indicator.class -%>
<div class="span12 entry">
  <div class="well">
  <div class="page-header">
    <h1><%= link_to @indicator.program.title, url_for(@indicator.program) %></h1>
  </div>
  </div>
</div>

<div class="span8">
  <div class="well">
  <div class="page-header">
    <h3><%= @indicator.name %></h3>
  </div>
  <div class="content">
    <%= sanitize @indicator.description.html_safe %>
  </div>
  </div>
</div>

<div class="span4">
  <%= render 'entries/sidebar' %>
</div>