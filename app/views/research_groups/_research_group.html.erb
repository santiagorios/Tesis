<%= content_tag_for(:li, research_group, :class => "entry") do %>
  <div class="row">
    <div class="span2">
      <%= link_to research_group_path(research_group), :class => 'thumbnail' do %>
        <img src="http://www.placehold.it/160x155/EFEFEF/AAAAAA&amp;text=L.+InvestigaciÃ³n">
      <% end %>
    </div>
    <div class="span6">
      <% if research_group.owned_by? current_user %>
        <div class="entry-actions pull-right">
          <%= link_to edit_research_group_path(research_group), :class => 'btn btn-mini btn-success' do %>
            <i class="icon-pencil icon-white"></i> <%= t('.edit', :default => t("helpers.links.edit")) %>
          <% end %>
          <%= link_to research_group_path(research_group),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' do %>
            <i class="icon-remove icon-white"></i> <%= t('.destroy', :default => t("helpers.links.destroy")) %>
          <% end %>
        </div>
      <% end %>
      <%= link_to research_group_path(research_group) do %>
        <h2><%= research_group.name %></h2>
      <% end %>
    </div>
  </div>
<% end %>