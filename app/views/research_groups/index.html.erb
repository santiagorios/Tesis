<%- model_class = ResearchGroup.new.class -%>
<div class="span8">
  <div class="well">
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human(:count => @research_groups.count )%></h1>
    </div>
    <ul class="thumbnails entries">
      <%= render @research_groups %>
    </ul>
    <div class="pull-right">
      <%= will_paginate @research_groups, :renderer => BootstrapPagination::Rails %>
    </div>
  </div>
</div>
<div class="span4">
  <%= render "entries/sidebar" %>
</div>