<%= simple_form_for(:session, url: sessions_path, :html => { :class => 'form-horizontal' }) do |f| %>

  <div class="control-group">
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on">
          <i class="icon-envelope"></i>
        </span><%= f.input_field :email, :placeholder => t("user.login.email.placeholder"), :id => "email", :name => "email" %>
      </div>
    </div>
  </div>
  
  <div class="control-group">
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on">
          <i class="icon-lock"></i>
        </span><%= f.input_field :password, :placeholder => t("user.login.password.placeholder"), :id => "password", :name => "password" %>
      </div>
    </div>
  </div>

  <%= f.input :remember_me, as: :boolean, :id => "remember_me", :name => "remember_me" %>

  <div class="form-actions">
    <div class="pull-right">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  root_path, :class => 'btn' %>
    </div>
  </div>
<% end %>
