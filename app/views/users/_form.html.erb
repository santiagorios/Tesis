<%= simple_form_for @user, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
  <div class="alert">
    <button class="close" data-dismiss="alert">x</button>
    <strong><%= t('application.warning') %></strong> <%= t('user.could_not_create', :count => @user.errors.count) %>
  </div>
  <% end %>

  <%= f.input :email, :placeholder => t("user.email.placeholder"), :disabled => params[:action] == 'edit' || params[:action] == 'myaccount' ? true: false %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <div class="form-actions">
    <div class="pull-right">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  root_path, :class => 'btn' %>
    </div>
  </div>
<% end %>
