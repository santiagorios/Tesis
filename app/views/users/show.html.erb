<div class="span12" id="user">
  <div class="page-header">
    <div class="row">
      <div id="info">
        <div class="span6 pull-left">
          <h1><%= @user.header_name %></h1>
          <h3>Email: <small><%= best_in_place @user, :email %></small></h3>
          <h3>Deparment: <small><%= best_in_place @user, :department_name %></small></h3>
          <h3>Phone: <small><%= best_in_place @user, :phone_number, :path => user_path(@user.id), :display_as => :"phone_number" %></small></h3>
        </div>
        <div class="span6 pull-right">
          <% if @user.profile.image? %>
            <%= image_tag @user.profile.image_url(:thumb), :class => 'pull-right' %>
          <% else %>
            <img class="pull-right" src="http://www.placehold.it/140x135/EFEFEF/AAAAAA&amp;text=no+image">
          <% end %>
        </div>
        <% if !@user.profile.about_me.nil? and !@user.profile.about_me.empty? %>
          <div class="span12 collapsed" id="extra">
            <h3>Bio: <small><%= sanitize @user.profile.about_me.html_safe %></small></h3>
          </div>
          <div class="label label-info" id="help-text">
            Click to show more!
          </div>
        <% end %>
      </div>
    </div>
    
  </div>

  <div class="row">
    <div class="span8">
      <ul class="thumbnails entries">
        <%= render @entries %>
      </ul>
      <div class="pull-right">
        <%= will_paginate @entries, :renderer => BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>